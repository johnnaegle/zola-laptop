# Rotate nginx logs daily
/opt/homebrew/var/log/nginx/*.log {
  daily
  missingok
  rotate 7
  compress
  delaycompress
  notifempty
  create 0640 root admin
  sharedscripts
  postrotate
    if [ -f /opt/homebrew/var/run/nginx.pid ]; then
      kill -USR1 $(cat /opt/homebrew/var/run/nginx.pid)
    fi
  endscript
}
